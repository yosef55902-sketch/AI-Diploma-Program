# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.csv text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ipynb text eol=lf

# Denote all files that are truly binary and should not be modified.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.pkl binary
*.pickle binary
*.pptx binary
*.xlsx binary
*.xls binary

# Python files should use LF
*.py text eol=lf

# Shell scripts should use LF (works on all Unix-like systems)
*.sh text eol=lf

# Windows batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Jupyter notebooks
*.ipynb text

# Documentation files
*.md text eol=lf
*.rst text eol=lf

# Configuration files
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Data files
*.csv text eol=lf
*.tsv text eol=lf
*.json text eol=lf

